{
    "name": "mikefrancis/laravel-secureheaders",
    "description": "SecureHeaders wrapper for Laravel.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mike Francis",
            "email": "mikeffrancis@gmail.com"
        }
    ],
    "require": {
        "php": "7.x",
        "aidantwoods/secureheaders": "^2.0",
        "illuminate/contracts": ">=5.4",
        "illuminate/http": ">=5.4",
        "illuminate/support": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "lint": "phpcs config src tests --standard=psr2",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-clover=coverage.xml"
    },
    "autoload": {
        "psr-4": {
            "MikeFrancis\\LaravelSecureHeaders\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MikeFrancis\\LaravelSecureHeaders\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "MikeFrancis\\LaravelSecureHeaders\\ServiceProvider"
            ]
        }
    }
}
